<h1>タスク一覧</h1>

<% if @task.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @task.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
      <%=paginate @task %>
  </div>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
<% end %>
